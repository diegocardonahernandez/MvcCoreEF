@model Hospital

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-hospital"></i> @Model.Nombre
                    </h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6 class="text-muted text-uppercase mb-1">Código</h6>
                        <p class="fs-5 mb-0">@Model.IdHospital</p>
                    </div>
                    <hr>
                    <div class="mb-3">
                        <h6 class="text-muted text-uppercase mb-1">
                            <i class="bi bi-geo-alt"></i> Dirección
                        </h6>
                        <p class="fs-5 mb-0">@Model.Direccion</p>
                    </div>
                    <hr>
                    <div class="mb-3">
                        <h6 class="text-muted text-uppercase mb-1">
                            <i class="bi bi-telephone"></i> Teléfono
                        </h6>
                        <p class="fs-5 mb-0">@Model.Telefono</p>
                    </div>
                    <hr>
                    <div class="mb-3">
                        <h6 class="text-muted text-uppercase mb-1">
                            <i class="bi bi-bed"></i> Número de Camas
                        </h6>
                        <p class="fs-5 mb-0">@Model.Camas</p>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left"></i> Volver al listado
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>