@model Hospital

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-hospital-fill"></i> Editar Hospital
                    </h4>
                </div>
                <div class="card-body bg-light">
                    <form method="post">
                        <div class="mb-3">
                            <label for="IdHospital" class="form-label fw-bold text-dark">
                                <i class="bi bi-hash"></i> Código del Hospital
                            </label>
                            <input type="number" class="form-control border-secondary"
                                   id="IdHospital" name="IdHospital"
                                  value="@Model.IdHospital" readonly>
                        </div>

                        <div class="mb-3">
                            <label for="Nombre" class="form-label fw-bold text-dark">
                                <i class="bi bi-building"></i> Nombre
                            </label>
                            <input type="text" class="form-control border-secondary"
                                   id="Nombre" name="Nombre" value="@Model.Nombre">
                        </div>

                        <div class="mb-3">
                            <label for="Direccion" class="form-label fw-bold text-dark">
                                <i class="bi bi-geo-alt-fill"></i> Dirección
                            </label>
                            <input type="text" class="form-control border-secondary"
                                   id="Direccion" name="Direccion" @Model.Direccion>
                        </div>

                        <div class="mb-3">
                            <label for="Telefono" class="form-label fw-bold text-dark">
                                <i class="bi bi-telephone-fill"></i> Teléfono
                            </label>
                            <input type="text" class="form-control border-secondary"
                                   id="Telefono" name="Telefono" value="@Model.Telefono">
                        </div>

                        <div class="mb-4">
                            <label for="Camas" class="form-label fw-bold text-dark">
                                <i class="bi bi-bed-fill"></i> Número de Camas
                            </label>
                            <input type="number" class="form-control border-secondary"
                                   id="Camas" name="Camas" @Model.Camas
                                   min="0">
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Editar Hospital
                            </button>
                            <a asp-action="Index" class="btn btn-danger btn-lg">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>